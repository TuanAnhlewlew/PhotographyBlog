@{
    Layout = "_LayoutEmpty";
}
@using PhotographyBlog.Data
@model PhotographyBlog.Data.Album
<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Add Album</h3>
                    <p>Fill in the data below.</p>
                    <form asp-controller="Admin" asp-action="AlbumEdit" method="post">
                        <input type="hidden" name="id" value="@Model.AlbumId"/>
                        <div class="col-md-12">
                            <input class="form-control" type="text" name="albumName" placeholder="Album Name*" required value="@Model.Name">
                        </div>

                        <div class="col-md-12 mt-3">
                            <textarea class="form-control" type="text" name="albumDescription" placeholder="Description">@Model.Description</textarea>
                        </div>

                        <div class="form-check mt-3">
                            @if (Model.Active == true)
                            {
                                <input class="form-check-input" type="checkbox" id="ActiceCB" name="active" value="true" checked >
                            }
                            else
                            {
                                <input class="form-check-input" type="checkbox" id="ActiceCB" name="active" value="true">
                            }
                            <label class="form-check-label" for="ActiceCB">
                                Active
                            </label>
                        </div>

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>